{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "indent": "error",
        "no-throw-literal": "warn",
        "semi": "error",
        "block-spacing": "error",
        "eqeqeq": [
            "error", "always"
        ],
        "func-call-spacing": [
            "error", "never"
        ],
        "keyword-spacing": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-extra-semi": "error",
        "no-lonely-if": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi-spacing": [
            "error", {
                "before": false,
                "after": true
          }
        ]
    }
}
