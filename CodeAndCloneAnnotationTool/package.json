{
  "name": "code-annotation",
  "displayName": "Code Clone Annotation",
  "description": "Label code statements and clone pairs on your source code.",
  "icon": "resources/code-annotation.png",
  "publisher": "tkcandrade",
  "author": "Shamsa Abid",
  "homepage": "https://github.com/shamsa-abid/vscode-code-clone-annotation#readme",
  "repository": {
    "type": "git",
    "url": "github:shamsa-abid/vscode-code-clone-annotation.git"
  },
  "version": "0.0.10-dev",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-annotation.addNote",
        "category": "Code Annotation",
        "title": "Add note"
      },
      {
        "command": "code-annotation.addPlainNote",
        "category": "Code Annotation",
        "title": "Add plain note"
      },
      {
        "command": "code-annotation.addCoreLabel",
        "category": "Core Code Annotation",
        "title": "Label core similarities"
      },
      {
        "command": "code-annotation.addNonCoreLabel",
        "category": "Non-core Code Annotation",
        "title": "Label non-core similarities"
      },
      {
        "command": "code-annotation.addDiffLabel",
        "category": "Difference Code Annotation",
        "title": "Label core differences"
      },
      {
        "command": "code-annotation.addNoncoreDiffLabel",
        "category": "Noncore Difference Code Annotation",
        "title": "Label noncore differences"
      },
      {
        "command": "clone-annotation.addCloneLabel",
        "category": "Clone Label true",
        "title": "Clone Label: True clone"
      },
      {
        "command": "clone-annotation.addCloneExtLabel",
        "category": "Clone Label ext true",
        "title": "Clone Label: Clone-Ext"
      },
      {
        "command": "clone-annotation.addNonCloneLabel",
        "category": "Clone Label false",
        "title": "Clone Label: False clone"
      },
      {
        "command": "code-annotation.clearAllNotes",
        "category": "Code Annotation",
        "title": "Clear all notes"
      },
      {
        "command": "code-annotation.refreshEntry",
        "category": "Code Annotation",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "clone-annotation.refreshEntry",
        "category": "Clone Annotation",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "code-annotation.summary",
        "category": "Code Annotation",
        "title": "Summary",
        "icon": {
          "light": "resources/light/summary.svg",
          "dark": "resources/dark/summary.svg"
        }
      },
      {
        "command": "clone-annotation.summary",
        "category": "Clone Labels",
        "title": "CloneSummary",
        "icon": {
          "light": "resources/light/summary.svg",
          "dark": "resources/dark/summary.svg"
        }
      },
      {
        "command": "code-annotation.removeNote",
        "category": "Code Annotation",
        "title": "Remove note",
        "icon": {
          "dark": "resources/dark/remove.svg",
          "light": "resources/light/remove.svg"
        }
      },
      {
        "command": "clone-annotation.removeClone",
        "category": "Clone Annotation",
        "title": "Remove clone",
        "icon": {
          "dark": "resources/dark/remove.svg",
          "light": "resources/light/remove.svg"
        }
      },
      {
        "command": "clone-annotation.checkTrueClone",
        "category": "Clone Annotation",
        "title": "Check true clone",
        "icon": {
          "dark": "resources/dark/check.svg",
          "light": "resources/light/check.svg"
        }
      },
      {
        "command": "clone-annotation.uncheckFalseClone",
        "category": "Clone Annotation",
        "title": "UnCheck false clone",
        "icon": {
          "dark": "resources/dark/uncheck.svg",
          "light": "resources/light/uncheck.svg"
        }
      },
      {
        "command": "code-annotation.removeAllNotes",
        "category": "Code Annotation",
        "title": "Remove all notes",
        "icon": {
          "dark": "resources/dark/removeall.svg",
          "light": "resources/light/removeall.svg"
        }
      },
      {
        "command": "code-annotation.openNote",
        "category": "Code Annotation",
        "title": "Open Label"
      },
      {
        "command": "clone-annotation.openClone",
        "category": "Clone Annotation",
        "title": "Open clone file"
      },
      {
        "command": "code-annotation.editNote",
        "category": "Code Annotation",
        "title": "Edit Label"
      },
      {
        "command": "code-annotation.copyNote",
        "category": "Code Annotation",
        "title": "Copy Label"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+d",
        "command": "code-annotation.addNote",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+alt+p",
        "command": "code-annotation.addPlainNote",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+alt+c",
        "command": "code-annotation.addCoreLabel",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+alt+n",
        "command": "code-annotation.addNonCoreLabel",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      }
      ,
      {
        "key": "ctrl+alt+d",
        "command": "code-annotation.addDiffLabel",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus"
      }
      ,
      {
        "key": "ctrl+alt+i",
        "command": "code-annotation.addNoncoreDiffLabel",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      }
      ,
      {
        "key": "ctrl+alt+t",
        "command": "clone-annotation.addCloneLabel",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
      ,
      {
        "key": "ctrl+alt+f",
        "command": "clone-annotation.addNonCloneLabel",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      }
      ,
      {
        "key": "ctrl+alt+e",
        "command": "clone-annotation.addCloneExtLabel",
        "mac": "cmd+alt+e",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "code-annotation.removeNote",
          "when": "false"
        },
        {
          "command": "clone-annotation.removeClone",
          "when": "false"
        },
        {
          "command": "clone-annotation.checkTrueClone",
          "when": "false"
        },
        {
          "command": "clone-annotation.uncheckFalseClone",
          "when": "false"
        },
        {
          "command": "code-annotation.openNote",
          "when": "false"
        },
        {
          "command": "clone-annotation.openClone",
          "when": "false"
        },
        {
          "command": "code-annotation.editNote",
          "when": "false"
        },
        {
          "command": "code-annotation.copyNote",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "code-annotation.addCoreLabel",
          "title": "Code Annotation: Add core similarity label"
        },
        {
          "command": "code-annotation.addNonCoreLabel",
          "title": "Code Annotation: Add non core similarity label"
        },
        {
          "command": "code-annotation.addDiffLabel",
          "title": "Code Annotation: Add core difference label"
        }
        ,
        {
          "command": "code-annotation.addNoncoreDiffLabel",
          "title": "Code Annotation: Add noncore difference label"
        },
        
        {
          "command": "clone-annotation.addCloneLabel",
          "title": "Clone Annotation: True Clone label"
        }
        ,
        
        {
          "command": "clone-annotation.addCloneExtLabel",
          "title": "Clone Annotation: Clone-Ext label"
        }
        ,
        
        {
          "command": "clone-annotation.addNonCloneLabel",
          "title": "Clone Annotation: False Clone label"
        }
      ],
      "view/title": [
        {
          "command": "code-annotation.refreshEntry",
          "when": "view == codeAnnotationView",
          "group": "navigation"
        },
        {
          "command": "clone-annotation.refreshEntry",
          "when": "view == cloneAnnotationView",
          "group": "navigation"
        },
        {
          "command": "code-annotation.summary",
          "when": "view == codeAnnotationView",
          "group": "navigation"
        },
        {
          "command": "clone-annotation.summary",
          "when": "view == cloneAnnotationView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "clone-annotation.checkTrueClone",
          "when": "view == cloneAnnotationView && viewItem == $NotClone",
          "group": "inline@1"
        },
        {
          "command": "clone-annotation.uncheckFalseClone",
          "when": "view == cloneAnnotationView && viewItem == $Clone",
          "group": "inline@1"
        },
        {
          "command": "clone-annotation.uncheckFalseClone",
          "when": "view == cloneAnnotationView && viewItem == $Clone-Ext",
          "group": "inline@1"
        },
        {
          "command": "code-annotation.removeNote",
          "when": "view == codeAnnotationView && viewItem == $PendingNote || viewItem == $CompleteNote",
          "group": "inline@2"
        },
        {
          "command": "clone-annotation.removeClone",
          "when": "view == cloneAnnotationView && viewItem == $Clone || viewItem == $NotClone  || viewItem == $Clone-Ext",
          "group": "inline@2"
        },
        {
          "command": "code-annotation.removeAllNotes",
          "when": "view == codeAnnotationView && viewItem == $menu-done || view == codeAnnotationView && viewItem == $menu-pending",
          "group": "inline@3"
        },
        {
          "command": "code-annotation.openNote",
          "when": "view == codeAnnotationView && viewItem == $PendingNote || view == codeAnnotationView && viewItem == $CompleteNote",
          "group": "3_open@1"
        },
        {
          "command": "code-annotation.editNote",
          "when": "view == codeAnnotationView && viewItem == $PendingNote || view == codeAnnotationView && viewItem == $CompleteNote",
          "group": "3_open@2"
        },
        {
          "command": "code-annotation.copyNote",
          "when": "view == codeAnnotationView && viewItem == $PendingNote || view == codeAnnotationView && viewItem == $CompleteNote",
          "group": "3_open@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAnnotation",
          "title": "Code Annotation Bar",
          "icon": "resources/code-annotation.svg"
        },
        {
          "id": "cloneAnnotation",
          "title": "Clone Annotation Bar",
          "icon": "resources/code-annotation.svg"
        }
      ]
    },
    "views": {
      "codeAnnotation": [
        {
          "id": "codeAnnotationView",
          "name": "Code Annotation View"
        },
        {
          "id": "cloneAnnotationView",
          "name": "Clone Annotation View"
        }
      ]
    },
    "configuration": {
      "title": "Code Clone Annotation",
      "properties": {
        "code-annotation.showFileName": {
          "type": "boolean",
          "default": true,
          "description": "Show file name under annotation"
        },
        "code-annotation.showTimeStampForNoteCreation": {
          "type": "boolean",
          "default": false,
          "description": "Show created at timestamp under annotation"
        },
        "code-annotation.annotationBG.enableDecoration": {
          "description": "Enable color for the background for the annotation on the source code",
          "type": "boolean",
          "default": true
        },
        "code-annotation.annotationBG.color.dark": {
          "description": "Color for the background for the annotation on the source code in a Dark theme",
          "type": "string",
          "default": "#BB007FFF"
        },
        "code-annotation.annotationBG.color.light": {
          "description": "Color for the background for the annotation on the source code in a Light theme",
          "type": "string",
          "default": "#0000000C"
        },
        "code-annotation.annotationBG.color.core": {
          "description": "Dark Mode Color for the background for the core similarity label on the source code",
          "type": "string",
          "default": "#0B662399"
        },
        "code-annotation.annotationBG.color.noncore": {
          "description": "Dark Mode Color for the background for the non core similarity label on the source code",
          "type": "string",
          "default": "#04442799"
        },
        "code-annotation.annotationBG.color.diff": {
          "description": "Dark Mode Color for the background for the core difference label on the source code",
          "type": "string",
          "default": "#693A0199"
        },
        "code-annotation.annotationBG.color.noncorediff": {
          "description": "Dark Mode Color for the background for the noncore difference label on the source code",
          "type": "string",
          "default": "#784D1A99"
        },
        "code-annotation.annotationBG.color.lightcore": {
          "description": "Light mode Color for the background for the core similarity label on the source code",
          "type": "string",
          "default": "#38cb8299"
        },
        "code-annotation.annotationBG.color.lightnoncore": {
          "description": "Light mode Color for the background for the non core similarity label on the source code",
          "type": "string",
          "default": "#bef4d799"
        },
        "code-annotation.annotationBG.color.lightdiff": {
          "description": "Light mode Color for the background for the core difference label on the source code",
          "type": "string",
          "default": "#ed808099"
        },
        "code-annotation.annotationBG.color.lightnoncorediff": {
          "description": "Light mode Color for the background for the noncore difference label on the source code",
          "type": "string",
          "default": "#f6d5d599"
        },
        "code-annotation.filespath": {
          "description": "Path to folder to save the output summary files",
          "type": "string",
          "default": "D:/CodeCloneLabeling/author1labels/"
        }
        
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts --fix",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/parser": "^3.8.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.1",
    "typescript": "^3.9.7",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "vscode-uri": "^2.1.2"
  }
}
